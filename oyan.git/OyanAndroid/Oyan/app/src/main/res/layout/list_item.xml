<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="@dimen/friendImgW"
        android:layout_height="@dimen/friendImgH"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/friendImgMargin"
        android:src="@drawable/userph" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:layout_toLeftOf="@+id/makeCall"
        android:layout_toRightOf="@+id/img"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="@dimen/friendtextSize" />

    <TextView
        android:id="@+id/textPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_toEndOf="@+id/img"
        android:layout_toLeftOf="@+id/makeCall"
        android:layout_toRightOf="@+id/img"
        android:text=""
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/friendtextSize2" />

    <ImageView
        android:id="@+id/makeCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/text"
        android:src="@drawable/callme"
        android:padding="@dimen/friendImgMargin" />


    <TextView
        android:id="@+id/userTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPlace"
        android:layout_toLeftOf="@+id/makeCall"
        android:layout_toRightOf="@+id/img"
        android:layout_toStartOf="@+id/makeCall"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/friendtextSize2" />

    <TextView
        android:id="@+id/isFriend"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/textId"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/textSipUsername"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/textSipRegistrar"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userTime"
        android:layout_toLeftOf="@+id/makeCall"

        android:layout_toRightOf="@+id/img"
        android:layout_toStartOf="@+id/makeCall"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/friendtextSize2"
        android:singleLine="false"
        android:maxLines="3"
        android:longClickable="false" />
</RelativeLayout>